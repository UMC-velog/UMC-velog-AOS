<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/iv_comment_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/velog_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_comment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dddd"
            android:textColor="@color/background_black"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/iv_comment_profile"
            app:layout_constraintTop_toTopOf="@id/iv_comment_profile"/>
    <TextView
            android:id="@+id/tv_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5일전"
            android:textSize="12sp"
            android:textColor="@color/disabled"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv_comment_nickname"
            app:layout_constraintStart_toStartOf="@id/tv_comment_nickname"/>

    <TextView
            android:id="@+id/tv_comment_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asasdkjasdk"
            android:textColor="@color/background_black"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/iv_comment_profile"
            app:layout_constraintStart_toStartOf="@id/iv_comment_profile"/>

    <ImageView
            android:id="@+id/iv_comment_more"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_comment_more"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_comment_body"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개의 답글"
            android:textSize="18sp"
            android:textColor="@color/velog_green"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/iv_comment_more"
            app:layout_constraintBottom_toBottomOf="@id/iv_comment_more"
            app:layout_constraintStart_toEndOf="@id/iv_comment_more"/>
    <View
            android:id="@+id/comment_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9ECEF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_comment_more"/>
</androidx.constraintlayout.widget.ConstraintLayout>