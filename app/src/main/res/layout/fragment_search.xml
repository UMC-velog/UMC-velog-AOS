<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_main"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
            android:id="@+id/et_main_search"
            android:layout_width="328dp"
            android:layout_height="36dp"
            android:background="@drawable/custom_searchbox"
            android:hint="검색어를 입력하세요"
            android:textSize="18sp"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/background_black"
            android:paddingStart="44dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_main_search"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/et_main_search"
            app:layout_constraintStart_toStartOf="@id/et_main_search"/>
    
    <TextView
            android:id="@+id/tv_result"
            android:layout_width="328dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/background_black"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_main_search"
            app:layout_constraintStart_toStartOf="@id/et_main_search"
            app:layout_constraintEnd_toEndOf="@id/et_main_search"
            android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/et_main_search"
            app:layout_constraintEnd_toEndOf="@id/et_main_search"
            app:layout_constraintTop_toBottomOf="@id/tv_result"/>
</androidx.constraintlayout.widget.ConstraintLayout>