<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_post_4dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/post_image"
            android:layout_width="328dp"
            android:layout_height="171.19dp"
            android:src="@color/background_black"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:id="@+id/post_block"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        <TextView
                android:id="@+id/post_title"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:text="asdadaskdjalskdj"
                android:textColor="@color/background_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
        <TextView
                android:id="@+id/post_body"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:text="마ㅣㄴ어리ㅏㅁㄴㅇㄹㅁ\nasdasdadasd\nassadasdasd\nasd"
                android:textColor="@color/background_black"
                android:textSize="14sp"
                android:maxLines="3"
                android:layout_marginBottom="24dp"/>
        <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023년 10월 25일"
                android:textColor="@color/disabled"
                android:textSize="12sp"/>
    </LinearLayout>

    <View
            android:id="@+id/border_line"
            android:layout_width="328dp"
            android:layout_height="1dp"
            android:background="@color/border_line"/>
    <RelativeLayout
            android:id="@+id/user_block"
            android:layout_width="328dp"
            android:layout_height="45dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp">
        <LinearLayout
                android:id="@+id/profile_block"
                android:layout_width="94.2dp"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/iv_user_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@color/background_black"/>
            <TextView
                    android:id="@+id/tv_post_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "
                    android:textSize="12sp"
                    android:textColor="@color/disabled"/>
            <TextView
                    android:id="@+id/tv_post_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ddddd"
                    android:textSize="12sp"
                    android:textColor="@color/background_black"/>
        </LinearLayout>

        <ImageView
                android:layout_width="12dp"
                android:layout_height="11dp"
                android:src="@drawable/ic_like"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_likes"/>
        <TextView
                android:id="@+id/tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/background_black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>