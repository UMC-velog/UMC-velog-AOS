<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/background_main">
    <RelativeLayout
            android:id="@+id/rl_topbar"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="71dp"
                android:layout_height="24dp"
                android:src="@drawable/title_velog"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
        <ImageButton
                android:id="@+id/btn_main_mode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingEnd="6dp"
                android:src="@drawable/ic_main_day_mode"
                android:background="@color/transparent"
                android:layout_marginEnd="4dp"
                android:layout_toLeftOf="@id/btn_main_search"/>
        <ImageButton
                android:id="@+id/btn_main_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_main_search"
                android:background="@color/transparent"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@id/btn_main_login"/>
        <TextView
                android:id="@+id/btn_main_login"
                android:layout_width="73.52dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/btn_basic_16dp"
                android:backgroundTint="@color/background_black"
                android:text="로그인"
                android:textSize="16sp"
                android:textColor="@color/button_text"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_tabbar"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/rl_topbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_main"
                android:layout_width="160dp"
                android:layout_height="48dp"
                app:tabTextColor="@color/disabled"
                app:tabSelectedTextColor="@color/background_black"
                app:tabIndicatorColor="@color/background_black"
                android:backgroundTint="@color/transparent"
                app:tabRippleColor="@color/transparent"
                android:layout_alignParentStart="true">
            <com.google.android.material.tabs.TabItem
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:text="트렌딩"            />
            <com.google.android.material.tabs.TabItem
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="최신"/>
        </com.google.android.material.tabs.TabLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:background="@color/background_main"
                android:paddingHorizontal="8dp"
                android:elevation="2dp"
                android:layout_toRightOf="@id/tab_main"
                android:layout_centerVertical="true">
            <AutoCompleteTextView
                    android:id="@+id/tv_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_main_extra"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/rl_tabbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>